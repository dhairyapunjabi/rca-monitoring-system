<%= form_with model: @rca, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label "Your email" %><br>
    <input name = "user[email]" type = "text" value = <%= @rca.user.email %> >
  </p>
  <p>
    <%= form.label :status %><br>
    <%= form.text_field :status %>
  </p>
  <p>
    <%= form.label :team_id %><br>
    <%= form.select(:team_id) do %>
      <% @teams.each do |team| %>
        <option value = <%= team.id %> <% if team.id == @rca.team_id %> selected <% end %>><%= team.name %></option>
      <% end %>
    <% end %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
