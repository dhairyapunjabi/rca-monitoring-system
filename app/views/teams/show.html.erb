<div class="container-fluid">
  <h1 align = "center"><%= @team.name %></h1>
  <div class="card mb-3">
    <div class="card-header">
      <i class="fa fa-table"></i> RCA</div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Title</th>
              <th>Created by</th>
              <th>Status</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Title</th>
              <th>Created by</th>
              <th>Status</th>
            </tr>
          </tfoot>
          <tbody>
            <% @team.rcas.each do |rca| %>
              <tr>
                <td>
                  <%= link_to rca.title, edit_rca_path(rca)%></td>
                <td>
                  <%= rca.user.email %></td>
                <td>
                  <%= rca.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
